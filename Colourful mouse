void setup (){
size (500, 500);
}

void draw() {
  background(0,0,0);
  ellipse (mouseX,mouseY,60,60);
      if (mousePressed == true){
        fill(255,255,255);
      } else {
        fill (random(255),random(255),random(255));
      }
    } 
    void  mouseDragged() {
      fill(255,255,255);
      }
